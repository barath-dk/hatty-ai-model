generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  generations Generation[]
  projects    Project[]

  @@map("users")
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  userId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  generations Generation[]

  @@map("projects")
}

model Generation {
  id         String   @id @default(cuid())
  prompt     String   @db.Text
  code       String   @db.LongText
  bestModel  String
  score      Float
  previewUrl String?
  models     Json     // Array of model names used
  metadata   Json?    // Additional orchestration details
  project    String?
  userId     String?
  createdAt  DateTime @default(now())

  user       User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  projectRef Project? @relation(fields: [project], references: [id], onDelete: SetNull)

  @@index([project])
  @@index([userId])
  @@index([createdAt])
  @@map("generations")
}

model Deployment {
  id          String    @id @default(cuid())
  subdomain   String    @unique
  code        String    @db.LongText
  framework   String?
  status      String    @default("active") // active, inactive, failed
  generationId String?
  createdAt   DateTime  @default(now())
  expiresAt   DateTime?

  @@index([subdomain])
  @@index([status])
  @@map("deployments")
}

model ApiUsage {
  id        String   @id @default(cuid())
  model     String
  tokens    Int
  cost      Float
  userId    String?
  createdAt DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([model])
  @@index([createdAt])
  @@map("api_usage")
}
